# AI Health Companion Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# Groq API Configuration
# Get your free API key at: https://console.groq.com
GROQ_API_KEY=gsk_your_actual_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Database Configuration
DATABASE_URL=sqlite:///./health_platform.db

# Security Configuration
# Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-using-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Application Settings
APP_NAME=AI Health Companion
APP_VERSION=1.0.0
DEBUG=False

# ML Models Directory
MODELS_DIR=models

# Agent Configuration
AGENT_LOOP_INTERVAL_HOURS=1
AGENT_ENABLED=True

# Safety Thresholds
MAX_PREDICTION_AGE_DAYS=30
CONFIDENCE_THRESHOLD=0.6

# CORS Origins (comma-separated)
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000,http://127.0.0.1:5500

# ⚠️ IMPORTANT NOTES:
# 1. NEVER commit the actual .env file to Git
# 2. Add .env to your .gitignore file
# 3. Each developer should have their own .env file
# 4. In production, use environment variables from your hosting platform
